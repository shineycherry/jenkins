pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Simulating code build...'
                script {
                    currentBuild.result = 'SUCCESS'
                }
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                echo 'Simulating running unit and integration tests...'
                script {
                    currentBuild.result = 'SUCCESS'
                }
            }
        }
        stage('Code Analysis') {
            steps {
                echo 'Simulating code analysis...'
                script {
                    currentBuild.result = 'SUCCESS'
                }
            }
        }
        stage('Security Scan') {
            steps {
                echo 'Simulating security scanning...'
                script {
                    currentBuild.result = 'SUCCESS'
                }
            }
        }
        stage('Deploy to Staging') {
            steps {
                echo 'Simulating deployment to staging...'
                script {
                    currentBuild.result = 'SUCCESS'
                }
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                echo 'Simulating integration tests on staging...'
                script {
                    currentBuild.result = 'SUCCESS'
                }
            }
        }
        stage('Deploy to Production') {
            steps {
                echo 'Simulating deployment to production...'
                script {
                    currentBuild.result = 'SUCCESS'
                }
            }
        }
    }
    post {
        always {
            // Send email notification
            emailext subject: "${currentBuild.result == 'SUCCESS' ? 'Pipeline Success' : 'Pipeline Failure'}",
                      body: "Pipeline execution result: ${currentBuild.result}",
                      to: 'indrajapolkampalli@gmail.com'
        }
    }
}
