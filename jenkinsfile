    post {
        success {
            // Send success email notification
            emailext(
                to: 'indrajapolkampalli@gmail.com',
                subject: "Pipeline Succeeded: ${currentBuild.fullDisplayName}",
                body: "Pipeline completed successfully. Check logs for details.",
