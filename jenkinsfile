pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                // Use Maven for building
                echo 'Building the code using Maven'
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                // Use JUnit for unit tests and Selenium for integration tests
                echo 'Running unit and integration tests'
            }
        }
        stage('Code Analysis') {
            steps {
                // Use SonarQube for code analysis
                echo 'Running code analysis with SonarQube'
            }
        }
        stage('Security Scan') {
            steps {
                // Use OWASP Dependency Check for security scanning
                echo 'Performing security scan with OWASP Dependency Check'
            }
        }
        stage('Deploy to Staging') {
            steps {
                // Deploy to AWS EC2 staging instance
                echo 'Deploying to AWS EC2 staging instance'
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                // Run integration tests on staging environment
                echo 'Running integration tests on staging environment'
            }
        }
        stage('Deploy to Production') {
            steps {
                // Deploy to AWS EC2 production instance
                echo 'Deploying to AWS EC2 production instance'
            }
        }
    }
    post {
        success {
            // Email notification on success
            emailext body: 'Pipeline execution succeeded. See attached logs.', 
                     subject: 'Pipeline Success', 
                     to: 'indrajapolkampalli@gmail.com', 
                     attachLog: true
        }
        failure {
            // Email notification on failure
            emailext body: 'Pipeline execution failed. See attached logs.', 
                     subject: 'Pipeline Failure', 
                     to: 'indrajapolkampalli@gmail.com', 
                     attachLog: true
        }
    }
}
